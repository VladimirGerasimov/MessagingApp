<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.messengerapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.messengerapp.settings"
            android:label="@string/about_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.messengerapp.Main"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.messengerapp.Settings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.Contact"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_contact"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.Conv"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_conv"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.ProfilesAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_profiles"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.NewProf"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_new_prof"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.EditProfile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.EditContact"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_edit_contact"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.ConvFriends"
            android:label="@string/title_activity_conv_friends"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.messengerapp.TheDialog"
            android:label="@string/title_activity_the_dialog"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
    </application>

</manifest>
